.block
  display: table
  float: left
  min-height: 1px
  overflow: hidden
  padding: 10px

  for i in (1..12)
    &.x{i}
      width: i * (100%/12) - 2

    &.y{i}
      height: i * (100%/12) - 2

.inner-block
  border-radius: 5px
  display: table-cell
  vertical-align: middle
  height: 100%
  overflow: hidden
  position: relative
  text-shadow: 0 1px 2px rgba(40, 40, 40, .3)
  width: 100%

  a
    color: white
    display: block
    font-size: 24px
    position: absolute
    text-align: center
    top: 45%
    width: 100%

  &:hover
    color: white

    & .caption
      display: block

.caption
  absolute: bottom 0 left 0
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px
  background: rgba(40, 40, 40, .7)
  color: white
  padding: 5px
  width: 100%

for i in (0..7)
  .bg-pattern-{i}
    background-image: url(join('', i '.png'))

.bg:before
  absolute: top 0 left 0
  border-radius: 5px
  content: ' '
  height: 100%
  width: 100%

.bg-color-0:before
  background-color: rgba(231, 76, 60, .5)

.bg-color-1:before
  background-color: rgba(26, 188, 156, .5)

.bg-color-2:before
  background-color: rgba(52, 152, 219, .5)

.bg-color-3:before
  background-color: rgba(155, 89, 182, .5)

.bg-color-4:before
  background-color: rgba(52, 73, 94, .5)

.bg-color-5:before
  background-color: rgba(230, 126, 34, .5)

.bg-color-6:before
  background-color: rgba(241, 196, 15, .5)

.bg-color-7:before
  background-color: rgba(46, 204, 113, .5)